{% extends 'back/baseBack.html.twig' %}

{% block body %}

    <div class="col-lg-12 stretch-card">
        <div class="card">
            <div class="card-body">
                <h4 class="card-title">Table des cat√©gories</h4>
{#                <p class="card-description">
                    Add class <code>.table-{color}</code>
                </p>#}
                <div class="table-responsive pt-3">
                    <table class="table table-bordered">
                        <thead>
                            <tr>
                                <th>
                                    Nom
                                </th>
                                <th>
                                    Boite Vitesse
                                </th>
                                <th>
                                    Supprimer
                                </th>
                                <th>
                                    Modifier
                                </th>
                            </tr>
                        </thead>
                        <tbody>
                            {% for c in tabCategorie%}
                            <tr class="table-info">
                                <td>
                                    {{ c.nom }}
                                </td>
                                <td>
                                    {{ c.boitevitesse }}
                                </td>
                                <td>
                                    <a href ="{{ path('delete_categorie',{'id':c.id}) }}">Supprimer</a>
                                </td>
                                <td>
                                    <a href ="{{ path('edit_categorie',{'id':c.id}) }}">Modifier</a>
                                </td>
                            </tr>
                            {% endfor %}
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>

{% endblock %}