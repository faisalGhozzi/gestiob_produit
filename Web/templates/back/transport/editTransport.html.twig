{% extends 'back/baseBack.html.twig' %}
{% form_theme formTransport 'bootstrap_4_layout.html.twig' %}

{% block body %}

    <div class="content-wrapper">
        <div class="row">
            <div class="col-md-6 grid-margin stretch-card">
                <div class="card">
                    <div class="card-body">
                        <h1 class="header-title m-t-0 m-b-30">Modifier transport</h1>
                        {{ form_start(formTransport, {attr: {novalidate: 'novalidate'}}) }}
                        <div class="form-group">
                            <label for="exampleInputPassword1">Matricule</label>
                            {{ form_widget(formTransport.matricule, {'attr': {'class': 'form-control'}}) }}
                            {{ form_errors(formTransport.matricule, {'attr': {'class': 'text-danger'}}) }}
                        </div>
                        <div class="form-group">
                            <label for="exampleInputPassword1">Marque</label>
                            {{ form_widget(formTransport.marque, {'attr': {'class': 'form-control'}}) }}
                            {{ form_errors(formTransport.marque, {'attr': {'class': 'text-danger'}}) }}
                        </div>
                        <div class="form-group">
                            <label for="exampleInputConfirmPassword1">Modele</label>
                            {{ form_widget(formTransport.modele, {'attr': {'class': 'form-control'}}) }}
                            {{ form_errors(formTransport.modele, {'attr': {'class': 'text-danger'}}) }}
                        </div>
                        <div class="form-group">
                            <label for="exampleInputConfirmPassword1">Nombre de siege</label>
                            {{ form_widget(formTransport.nbsiege, {'attr': {'class': 'form-control'}}) }}
                            {{ form_errors(formTransport.nbsiege, {'attr': {'class': 'text-danger'}}) }}
                        </div>
                        <div class="form-group">
                            <label for="exampleInputConfirmPassword1">Image</label>
                            {{ form_widget(formTransport.image, {'attr': {'class': 'dropify','data-height':'300'}}) }}
                        </div>
                        <div class="form-group">
                            <label for="exampleInputConfirmPassword1">Prix</label>
                            {{ form_widget(formTransport.prix, {'attr': {'class': 'form-control'}}) }}
                            {{ form_errors(formTransport.prix, {'attr': {'class': 'text-danger'}}) }}
                        </div>
                        <div class="form-group">
                            <label for="exampleInputConfirmPassword1">Categorie</label>
                            {{ form_widget(formTransport.categorie, {'attr': {'class': 'form-control'}}) }}
                            {{ form_errors(formTransport.categorie, {'attr': {'class': 'text-danger'}}) }}
                        </div>
                        <input type="submit" value="Submit" class= 'btn btn-primary waves-effect waves-light'>
                        {{form_end(formTransport)}}
                    </div>
                </div>
            </div>
        </div>
    </div>

{% endblock %}